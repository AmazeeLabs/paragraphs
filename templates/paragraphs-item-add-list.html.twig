{#
/**
 * @file
 * Default theme implementation to list paragraphs types available for adding content.
 *
 * This list is displayed on the Add Paragraphs item admin page.
 *
 * Available variables:
 * - types: A list of paragraphs types, each with the following properties:
 *   - add_link: Link to create a paragraphs item of this type.
 *
 * @see template_preprocess_paragraphs_item_add_list()
 *
 * @ingroup themeable
 */
#}
{% if types is not empty %}
  <dl class="paragraphs-type-list">
    {% for type in types %}
      <dt>{{ type.add_link }}</dt>
    {% endfor %}
  </dl>
{% else %}
  <p>
    {% set create_content = path('paragraphs.type_add') %}
    {% trans %}
      You have not created any paragraphs types yet. Go to the <a href="{{ create_content }}">paragraphs type creation page</a> to add a new paragraphs type.
    {% endtrans %}
  </p>
{% endif %}
